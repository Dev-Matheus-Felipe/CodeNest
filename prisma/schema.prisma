generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) @map("_id")
  name      String?
  email     String?  @unique
  image     String?
  username  String? @unique
  bio String?
  emailVerified DateTime?

  accounts  Account[]
  sessions  Session[]

  createdAt DateTime  @default(now())
  createdResume String?

  portfolio String?
  bannedAt DateTime?

  responses Response[]

  posts Post[]

  savedPosts SavedPost[]
}

model Post {
  id          String   @id @default(cuid()) @map("_id")
  title       String
  description String     
  code        String?    
  language    String
  tags        String

  createdAt   DateTime @default(now())
  
  authorId    String
  author      User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  likes       Int @default(0)         
  responses   Response[]          
  savedBy     SavedPost[]             
}


model Response {
  id        String   @id @default(cuid()) @map("_id")
  content   String
  code      String?
  language  String
  createdAt DateTime @default(now())

  likes       Int @default(0)   
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}



model SavedPost {
  id      String   @id @default(cuid()) @map("_id")
  userId  String
  postId  String

  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  post    Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, postId]) 
}



model Account {
  id                 String  @id @default(cuid()) @map("_id")
  userId             String
  type               String
  provider           String
  providerAccountId  String
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}



